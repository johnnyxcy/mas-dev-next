{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[launch]@mas/desktop::main",
            "type": "node",
            "request": "launch",
            // "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            // "windows": {
            //     "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            // },
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/vite",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/vite.cmd"
            },
            // "runtimeArgs": ["--remote-debugging-port=9229", "."],
            "cwd": "${workspaceFolder}/apps/desktop",
            // "envFile": "${workspaceFolder}/packages/desktop/.debug.env",
            "console": "integratedTerminal",
            "env": {
                "_VSCODE_DEBUG": "1",
                "_REMOTE_DEBUGGING_PORT": "9229"
            },
            "presentation": {
                "hidden": true
            }
        },
        {
            "name": "[attach]@mas/desktop::renderer",
            "port": 9229,
            "request": "attach",
            "type": "chrome",
            "timeout": 60000,
            "webRoot": "${workspaceFolder}/apps/desktop",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceRoot}/node_modules/**",
                "${workspaceRoot}/**/node_modules/**",
                "!${workspaceRoot}/apps/desktop/**",
                "${workspaceRoot}/apps/desktop/.dist/**",
                "${workspaceRoot}/apps/desktop/src/platform/**",
                "${workspaceRoot}/apps/**/*",
                // Skip files in host(VITE_DEV_SERVER_URL)
                "http://127.0.0.1:7777/**"
            ],
            "presentation": {
                "hidden": true
            }
        }
    ],
    "compounds": [
        {
            "name": "[launch]@mas/desktop",
            "stopAll": true,
            // "preLaunchTask": "[debug]@mas/desktop::before",
            "configurations": ["[launch]@mas/desktop::main", "[attach]@mas/desktop::renderer"],
            "presentation": {
                "hidden": false,
                "order": 1
            }
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "port",
            "description": "Port = ",
            "default": "6001"
        }
    ]
}
