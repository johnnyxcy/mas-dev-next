{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[launch]@mas/maspectra:main",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "runtimeArgs": ["--no-sandbox", "--remote-debugging-port=9229", "."],
            "envFile": "${workspaceFolder}/.vscode/.debug.env",
            "console": "integratedTerminal",
            "presentation": {
                "hidden": true
            }
        },
        {
            "name": "[attach]@mas/maspectra:renderer",
            "port": 9229,
            "request": "attach",
            "type": "chrome",
            "timeout": 60000,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceRoot}/node_modules/**",
                "${workspaceRoot}/**/node_modules/**",
                "${workspaceRoot}/typescript/apps/maspectra/.dist/**",
                // Skip files in host(VITE_DEV_SERVER_URL)
                "http://127.0.0.1:9876/**"
            ],
            "presentation": {
                "hidden": true
            }
        },
        {
            "name": "[launch]@mas/ebt",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/mas/apps/ebt/__main__.py",
            "args": [
                "--port",
                "${input:port}",
                "--secret",
                "dasstudio2019",
                "--log",
                "${workspaceFolder}/mas/apps/ebt/.tmp/ebt.dev.log",
                "--debug"
            ],
            "envFile": "${workspaceFolder}/.env",
            "autoReload": {
                "enable": true
            },
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "order": 2
            }
        }
    ],
    "compounds": [
        {
            "name": "[launch]@mas/maspectra",
            "stopAll": true,
            "preLaunchTask": "[Maspectra] Before Debug",
            "configurations": ["[launch]@mas/maspectra:main", "[attach]@mas/maspectra:renderer"],
            "presentation": {
                "hidden": false,
                "order": 1
            }
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "port",
            "description": "Port = ",
            "default": "6001"
        }
    ]
}
